{
  "name": "decentraland-server",
  "version": "0.0.0-development",
  "description": "Set of common functionality accross Decentraland projects servers.",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "docs": "npx jsdoc -c conf.json -r src/**/*",
    "lint": "tslint -p src/tsconfig.json",
    "lint:fix": "tslint -p src/tsconfig.json --fix",
    "init": "mkdir -p dist",
    "clean": "(rm -rf dist || true)",
    "prebuild": "npm run clean && npm run init",
    "build": "tsc -p src/tsconfig.json",
    "pretest": "npm run build",
    "test": "npm run build && tsc -p specs/tsconfig.json && mocha specs/**/*.spec.js",
    "semantic-release": "semantic-release",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/decentraland-server.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "common",
    "modules",
    "server",
    "decentraland"
  ],
  "author": "Decentraland",
  "license": "ISC",
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false
  },
  "dependencies": {
    "commander": "^2.13.0",
    "inquirer": "^5.1.0",
    "pg": "^7.4.3",
    "rollbar": "^2.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/inquirer": "0.0.41",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.0",
    "@types/pg": "^7.4.9",
    "chai": "^4.1.2",
    "dcl-tslint-config-standard": "^1.0.1",
    "husky": "^0.14.3",
    "jsdoc": "^3.6.3",
    "mocha": "^4.0.1",
    "prettier": "^1.8.2",
    "semantic-release": "^15.13.19",
    "tslint": "^5.9.1",
    "tslint-language-service": "^0.9.8",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.7.2",
    "validate-commit-msg": "^2.14.0"
  }
}
