{
  "name": "decentraland-server",
  "version": "0.0.0-development",
  "description": "Set of common functionality accross Decentraland projects servers.",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "docs": "jsdoc -c conf.json -r src/**/*",
    "lint": "tslint -p src/tsconfig.json",
    "lint:fix": "tslint -p src/tsconfig.json --fix",
    "init": "mkdir -p dist",
    "clean": "(rm -rf dist || true)",
    "prebuild": "npm run clean && npm run init",
    "build": "tsc -p src/tsconfig.json",
    "pretest": "npm run build",
    "test": "npm run build && tsc -p specs/tsconfig.json && mocha specs/**/*.spec.js",
    "semantic-release": "semantic-release",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/decentraland-server.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "common",
    "modules",
    "server",
    "decentraland"
  ],
  "author": "Decentraland",
  "license": "ISC",
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false
  },
  "dependencies": {
    "@types/commander": "^2.12.2",
    "commander": "^2.20.0",
    "inquirer": "^6.5.0",
    "npm-check-updates": "^3.1.20",
    "pg": "^7.12.0",
    "rollbar": "^2.9.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.0",
    "@types/inquirer": "6.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.8",
    "@types/pg": "^7.4.14",
    "chai": "^4.2.0",
    "dcl-tslint-config-standard": "^2.0.0",
    "husky": "^3.0.1",
    "jsdoc": "^3.6.3",
    "mocha": "^6.2.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.28",
    "tslint": "^5.18.0",
    "tslint-language-service": "^0.9.9",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.3",
    "validate-commit-msg": "^2.14.0"
  }
}
